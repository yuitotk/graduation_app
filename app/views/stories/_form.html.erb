<%= form_with model: story do |f| %>
  <% if story.errors.any? %>
    <ul>
      <% story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "説明" %><br>
    <%= f.text_area :description, rows: 5 %>
  </div>

  <%= f.submit %>
<% end %>
